<HBox xmlns:fx="http://javafx.com/fxml"
	fx:controller="u1171639.main.java.view.fxml.controller.BuyingViewController">
	
		<VBox>
			<padding>
				<Insets top="25" right="25" bottom="10" left="25" />	
			</padding>
	
			<Text text="Lot Search" />
			
			<TableView fx:id="lotList" onMouseClicked="#handleLotSelected"  prefHeight="628" prefWidth="450"/>
				
			<HBox>
				<Button text="Edit Search" onMouseClicked="#handleEditSearch"/>
				<Button text="Clear" onMouseClicked="#handleClearSearch"/>
			</HBox>
		</VBox>
		
		<VBox>
			<Pane fx:id="lotPane" />
			<Pane fx:id="bidsPane">
				<padding>
					<Insets top="25" />	
				</padding>	
			</Pane>
		</VBox>
</HBox>